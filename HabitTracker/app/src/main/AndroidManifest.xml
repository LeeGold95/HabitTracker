<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="listapp.habittracker">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo_black"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_logo_black_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HabitTracker">
        <activity android:name=".users.activities.ProfileActivity"/>
        <activity android:name=".users.activities.ResetPasswordActivity" />
        <activity android:name=".settingsscreen.activities.SettingsActivity" />
        <activity android:name=".users.activities.RegisterActivity" />
        <activity android:name=".users.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".mainscreen.activities.CalendarActivity" />
        <activity android:name=".mainscreen.activities.MainActivity">
        </activity>
    </application>

</manifest>